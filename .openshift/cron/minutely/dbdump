#!/bin/bash
if [ `date +%M` == "51" ]
 then
  timestamp=$(date +%Y-%m-%d-%H.%M.%S)
  mysqldump -u $OPENSHIFT_MYSQL_DB_USERNAME  -p$OPENSHIFT_MYSQL_DB_PASSWORD biblioteca -h $OPENSHIFT_MYSQL_DB_HOST | gzip -> $OPENSHIFT_DATA_DIR/Dropbox/sistema/base-de-datos/mysqldump-servidor-$timestamp.gz
  backup=`$OPENSHIFT_DATA_DIRDropbox-Uploader/dropbox_uploader.sh -f $OPENSHIFT_DATA_DIR/.dropbox_uploader upload $OPENSHIFT_DATA_DIR/Dropbox/sistema/base-de-datos/mysqldump-servidor-$timestamp.gz sistema/base-de-datos/mysqldump-servidor-$timestamp.gz`
  echo $backup >> $OPENSHIFT_PHP_LOG_DIR/dbdump.log
  ls $OPENSHIFT_DATA_DIR/Dropbox/sistema/base-de-datos >> $OPENSHIFT_PHP_LOG_DIR/dbdump.log
fi
